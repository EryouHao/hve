@import '../lib/var'

.sidebar
  position: fixed
  width: 38.2%
  height: 100%
  background: rgba(0, 0, 0, 0.8)
  text-align: center
  color: $e-gray
  .logo
    height: 200px
    display: flex
    flex-direction: column
    justify-content: center
    font-size: 24px
  .menu
    a
      display: block
      line-height: 48px
      color: $e-gray
      background: transparent
      transition: all 0.3s
      &:hover
        color: $e-white
        background: rgba(0, 0, 0, 0.23)
