@import './lib/normalize'
*,
*:before,
*:after
  margin: 0
  padding: 0
html
  font-size: 58%
body
  font-family: -apple-system, BlinkMacSystemFont, opensans, Optima, 'Microsoft Yahei', sans-serif
  font-size: 1.2em
  color: #333
  background: #fdfdfd
a
  color: #333
  text-decoration: none
  font-size: 1.85rem
ul li
  list-style: none
body, div, a, p, ul, li, ol, h1, h2, h3, h4, h5, h6, table, tr, td
  font-weight: normal
  box-sizing: border-box
  margin: 0
  padding: 0

@import './components/menu'
@import './components/post'

.container
  margin-left: 38.2%
  padding: 5em
  max-width: 61.8%
  width: calc(100% - 38.2%)
  .post-container
    li
      margin-bottom: 20px

